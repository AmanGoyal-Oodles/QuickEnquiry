<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mar_125"
    android:background="@color/B"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_restro_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/camera_image_background"
            android:padding="@dimen/mar_20"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera_black" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_displayname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_marginTop="@dimen/mar_5"
            android:text="Aman Goyal"
            android:textSize="@dimen/mar_15" />


        <TextView
            android:id="@+id/nav_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_marginTop="@dimen/mar_5"
            android:text="9355606425"
            android:textSize="@dimen/mar_15" />
    </LinearLayout>

</LinearLayout>
