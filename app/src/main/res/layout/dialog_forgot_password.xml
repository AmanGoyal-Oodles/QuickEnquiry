<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:padding="@dimen/mar_20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Your Password ?"
        android:textSize="@dimen/textSize20sp"
        android:id="@+id/forgot_pass_text_tv"
        android:textColor="@color/Black"/>

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Mobile No"
        android:textColor="@color/Black"
        android:textSize="@dimen/textSize14sp"
        android:id="@+id/forgot_pass_mobile_tv"
        android:layout_below="@+id/forgot_pass_text_tv"
        android:layout_marginTop="@dimen/mar_30"/>-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_pass_text_tv"
        android:background="@drawable/border_bg_et"
        android:hint="Enter Your Registered Mobile No. Here"
        android:inputType="phone"
        android:textSize="@dimen/textSize16sp"
        android:maxLength="10"
        android:id="@+id/forgot_pass_mobile_et"
        android:layout_marginTop="@dimen/mar_30"
        android:padding="@dimen/mar_10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_below="@id/forgot_pass_mobile_et"
        android:layout_alignParentRight="true"
        android:background="@color/LightGray"
        android:textColor="@color/DarkGray"
        android:textSize="@dimen/textSize16sp"
        android:id="@+id/forgot_pass_cancel_btn"
        android:layout_marginTop="@dimen/mar_20"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND OTP"
        android:layout_below="@id/forgot_pass_mobile_et"
        android:layout_toLeftOf="@+id/forgot_pass_cancel_btn"
        android:layout_marginRight="@dimen/mar_20"
        android:background="@drawable/border_bg_et"
        android:textColor="@color/Black"
        android:textSize="@dimen/textSize16sp"
        android:id="@+id/forgot_pass_send_otp_btn"
        android:layout_marginTop="@dimen/mar_20"/>

</RelativeLayout>